{
	"extends": "./tsconfig.base.json",
	"display": "dev/solid",
	"compilerOptions": {
		"jsx": "preserve",
		"jsxImportSource": "solid-js",

		"module": "ESNext",
		"target": "ES2022",
		"lib": ["ESNext", "DOM", "DOM.Iterable"],
		"types": ["vite/client", "vitest/globals"],

		"baseUrl": ".",
		"outDir": ".local/build",

		"paths": {
			"~/*": ["./source/*"]
			// "@nore/panda/*": ["./.local/panda/*"]
		}
	},
	"include": ["*.ts*", "source", "scripts"]
}
